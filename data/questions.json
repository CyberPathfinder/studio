      "i18n": {
        "en": {
          "title": "Your Profile"
        },
        "ru": {
          "title": "Ваш профиль"
        }
      }
    },
    {
      "id": "nutrition",
      "order": 2,
      "i18n": {
        "en": {
          "title": "Nutrition"
        },
        "ru": {
          "title": "Питание"
        }
      }
    },
    {
      "id": "habits",
